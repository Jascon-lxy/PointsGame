page{
  background: #ebebeb;
}
#header{
  width: 100%;
  height: 280rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
#header .content{
  display: flex;
  padding-left: 40rpx;
  padding-top: 40rpx;
  text-align: left;
}
#header .content image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
#header .content .nickName{
  padding-left: 30rpx;
  color: #000000;
  font-size: 40rpx;
  line-height: 50rpx;
  padding-top: 20rpx;
}
#header .content .integral{
  padding-left: 30rpx;
  padding-top: 20rpx;
}
/*竖向标题*/
#menus{
  background: #ffffff;
  height: auto;
  width: 100%;
}
#menus .content{
  height: 90rpx;
  border-bottom: 1rpx soild #ebebeb;
}
#menus .content view{
  float: left;
}
#menus .content view text{
  font-size: 30rpx;
  line-height: 90rpx;
  padding-left: 40rpx;
}
#menus .content .right{
  height: 90rpx;
  line-height: 90rpx;
  float: right;
  margin-right: 20rpx;
}

.callme{
  position: fixed;
  text-align: center;
  bottom: 30rpx;
  left: 0;
  right: 0;
  color: #b3a6a6;
  font-size: 25rpx;
}